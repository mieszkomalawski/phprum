{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="row" style="margin-top: 8%">
<div class="col-md-4 col-md-offset-4" style="padding-left: 8%; padding-right: 8%">

                  <form id="login-form" class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
                      {% if csrf_token %}
                          <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                      {% endif %}

                      <div class="form-group">
                          <div class="col-sm-12 text-center">
                              <label class="control-label" for="username">{{ 'security.login.username'|trans }}</label>
                          </div>
                          <div class="col-sm-12 text-center">
                              <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                          </div>
                      </div>

                      <div class="form-group">
                          <div class="col-sm-12 text-center">
                              <label class="control-label" for="password">{{ 'security.login.password'|trans }}</label>
                          </div>
                          <div class="col-sm-12 text-center">
                              <input type="password" id="password" name="_password" required="required" />
                          </div>
                      </div>

                      <div class="col-sm-12">
                          <div class="checkbox text-center">
                              <label><input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                                  {{ 'security.login.remember_me'|trans }}</label>

                          </div>
                      </div>

                      <div class="form-group">
                          <div class="col-sm-12 text-center">
                            <input class="btn btn-primary btn-lg btn-block" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                          </div>
                      </div>




                  </form>

</div>
</div>
