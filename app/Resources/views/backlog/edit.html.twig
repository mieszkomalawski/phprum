{% extends 'base.html.twig' %}

{% block javascripts %}

    <script src={{ asset('build/item_edit.js') }}>

    </script>

{% endblock %}

{% block body %}
    {% form_theme form with ['bootstrap_3_horizontal_layout.html.twig', 'jquery.collection.html.twig', _self]  %}

    <div class="row">
        <div class="col-md-12">
            <a href="{{ path('add_sub_task', {'id': item.id }) }}">Add sub task</a>
        </div>
    </div>

    {{ form_start(form) }}

    {{ form_row(form.save) }}

    {{ form_row(form.name) }}

    {{ form_row(form.estimate) }}

    {{ form_row(form.status) }}

    {{ form_row(form.Sprint) }}

    {{ form_row(form.epic) }}

    {{ form_row(form.blockedBy) }}

    {{ form_row(form.blocks) }}

    {{ form_row(form.description) }}

    {{ form_row(form.labels) }}

    {% if path is defined %}
        <div class="row">
            <div class="col-md-12">
                <img src="{{ path }}"/>
            </div>
        </div>
    {% endif %}

    {{ form_row(form.imageFile) }}

    <div class="form-group">
        <div class="col-md-12">
            <table class="table">
                <tr>
                    <td>Name</td>
                    <td>Description</td>
                    <td>Status</td>
                    <td>Edt</td>
                </tr>
                {% for subItem in form.subItems %}
                    <tr>

                        <td>{{ form_widget(subItem.name) }}</td>
                        <td>{{ form_widget(subItem.description) }}</td>
                        <td>{{ form_widget(subItem.status) }} {{ form_errors(subItem.status) }}</td>
                        <td>
                            <div class="btn">
                                <a href="{{ path('edit_sub_task', {'id': item.id, 'subItemId': subItem.vars.value.id }) }}">Edit</a>
                            </div>
                        </td>

                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>

    {{ form_end(form) }}

{% endblock %}